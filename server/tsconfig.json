{
  "compilerOptions": {
    "target": "es2019", 
    "module": "commonjs", 
    "lib": ["es2019"], 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}